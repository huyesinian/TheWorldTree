
@{
    ViewData["Title"] = "主页";
    Layout = "~/Views/Shared/_Layout_Front.cshtml";
}



<body>


    <div class="content">
        <div class="cont w1000">
            @*<div class="title">
                <span class="layui-breadcrumb" lay-separator="|">
                    <a href="javascript:;" class="active">设计文章</a>
                    <a href="javascript:;">前端文章</a>
                    <a href="javascript:;">旅游杂记</a>
                </span>
